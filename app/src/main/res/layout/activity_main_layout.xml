<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.android.cordcalculator.MainLayoutActivity"
    android:background="@drawable/gradient_background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <!-- Includes logo and progress bar on the left side of the screen -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <!--Progress bar with dashed line-->
            <ImageView
                android:id="@+id/bookmark"
                android:src="@drawable/bookmark"
                style="@style/bookmark" />

            <View
                android:background="@drawable/dashed_line"
                style="@style/dashed_line" />

            <ImageView
                android:id="@+id/imageStepOne"
                style="@style/image_step_number" />

            <View
                android:background="@drawable/dashed_line"
                style="@style/dashed_line" />

            <ImageView
                android:id="@+id/imageStepTwo"
                style="@style/image_step_number" />

            <View
                android:background="@drawable/dashed_line"
                style="@style/dashed_line" />

            <ImageView
                android:id="@+id/imageStepThree"
                style="@style/image_step_number" />

            <View
                android:background="@drawable/dashed_line"
                style="@style/dashed_line" />

            <ImageView
                android:id="@+id/imageStepFour"
                style="@style/image_step_number" />

        </LinearLayout>

        <!-- Includes question witch answers on the right side of the screen -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="@dimen/width_of_border"
                android:layout_height="100dp"
                android:layout_gravity="end">

                <TextView
                    android:id="@+id/calculator_string"
                    style="@style/calculator_string"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/calculator_string" />

                <View style="@style/border_below_calc_string" />

            </RelativeLayout>

            <!-- Contains re-usable layouts -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ViewFlipper xmlns:android="http://schemas.android.com/apk/res/android"
                    android:id="@+id/view_flipper"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <include
                        android:id="@+id/include_first_step"
                        layout="@layout/activity_first_step" />

                    <include
                        android:id="@+id/include_second_step"
                        layout="@layout/activity_second_step" />

                    <include
                        android:id="@+id/include_third_step"
                        layout="@layout/activity_third_step" />

                    <include
                        android:id="@+id/include_fourth_step"
                        layout="@layout/activity_fourth_step" />

                </ViewFlipper>

                <ImageButton
                    android:id="@+id/button_step_next"
                    style="@style/button_switch_next"
                    android:background="@null"
                    android:src="@drawable/arrow_right"
                    android:onClick="openNextStep" />

                <ImageButton
                    android:id="@+id/button_step_back"
                    style="@style/button_switch_back"
                    android:background="@null"
                    android:src="@drawable/arrow_left"
                    android:onClick="openPreviousStep" />

            </RelativeLayout>

        </LinearLayout>

    </LinearLayout>

</ScrollView>
