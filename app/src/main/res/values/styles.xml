<resources>
    <!-- Basic style for the app -->
    <style name="basicTextStyle">
        <item name="android:textColor">@color/defaultBlack</item>
        <item name="android:fontFamily">@font/lato</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="defaultButtonStyle">
        <item name="android:background">@drawable/button_rounded_corners</item>
        <item name="android:textColor">@color/defaultWhite</item>
        <item name="android:textSize">@dimen/start_button_text_size</item>
        <item name="android:fontFamily">@font/lato</item>
    </style>

    <!-- First screen of the app -->
    <style name="welcome_text_view" parent="basicTextStyle">
        <item name="android:textSize">@dimen/welcome_text_size</item>
    </style>

    <style name="full_logo_image_view">
        <item name="android:layout_width">@dimen/width_logo_bobbiny</item>
        <item name="android:layout_height">@dimen/height_logo_bobbiny</item>
        <item name="android:scaleType">fitCenter</item>
        <item name="android:contentDescription">@string/full_logo_description</item>
    </style>

    <style name="motto_text_view" parent="basicTextStyle">
        <item name="android:textSize">@dimen/regular_text_size</item>
    </style>

    <style name="button_start" parent="defaultButtonStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingStart">@dimen/start_button_padding_left_right</item>
        <item name="android:paddingEnd">@dimen/start_button_padding_left_right</item>
    </style>

    <!-- Main screen of the app -->
    <!-- Progress bar -->
    <style name="vertical_dashed_line">
        <item name="android:layout_width">@dimen/dashed_line_width</item>
        <item name="android:layout_height">@dimen/dashed_line_height</item>
        <item name="android:layout_marginBottom">@dimen/dashed_line_margin_bottom</item>
    </style>

    <style name="bookmark_image">
        <item name="android:layout_width">@dimen/bookmark_image_width</item>
        <item name="android:layout_height">@dimen/bookmark_image_height</item>
        <item name="android:layout_marginStart">@dimen/bookmark_image_margin</item>
        <item name="android:scaleType">fitCenter</item>
    </style>

    <style name="image_step_number">
        <item name="android:layout_width">@dimen/step_image_size</item>
        <item name="android:layout_height">@dimen/step_image_size</item>
        <item name="android:layout_marginTop">@dimen/step_image_margin_top</item>
    </style>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
</resources>
