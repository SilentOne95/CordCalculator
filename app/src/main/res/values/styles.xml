<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorControlNormal">@color/colorAccent</item>
    </style>

    <!-- Launch screen theme. -->
    <style name="AppTheme.Launcher" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/launch_layout_screen</item>
    </style>

    <!-- Basic style -->
    <style name="basicTextStyle">
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:fontFamily">@font/lato</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="defaultButtonStyle">
        <item name="android:background">@drawable/button_rounded_corners</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textSize">@dimen/start_button_text_size</item>
        <item name="android:fontFamily">@font/lato</item>
    </style>

    <style name="checkboxStyle">
        <item name="android:layout_marginStart">@dimen/mid_value</item>
        <item name="android:textSize">@dimen/regular_text_size</item>
        <item name="android:textColor">@color/colorBlack</item>
    </style>

    <!-- Main screen of the app -->
    <style name="image_step_number">
        <item name="android:layout_width">@dimen/step_image_size</item>
        <item name="android:layout_height">@dimen/step_image_size</item>
        <item name="android:layout_marginTop">@dimen/step_image_margin_top</item>
    </style>

</resources>
